<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane prefHeight="490.0" prefWidth="600.0" styleClass="background" stylesheets="@JMetroDarkTheme.css" xmlns="http://javafx.com/javafx/9.0.4" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.thecoderscorner.menu.editorui.generator.ui.CodeGeneratorController">
   <children>
      <GridPane layoutX="14.0" layoutY="14.0" prefHeight="80.0" prefWidth="575.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Generate into directory" />
            <Label fx:id="projectDirLabel" text="projectDir" GridPane.columnIndex="1" />
            <Label text="Embedded Platform" GridPane.rowIndex="1" />
            <ComboBox fx:id="embeddedPlatformChoice" prefHeight="33.0" prefWidth="286.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
         </children>
      </GridPane>
      <TreeTableView fx:id="componentTree" layoutX="8.0" layoutY="100.0" prefHeight="329.0" prefWidth="582.0">
        <columns>
          <TreeTableColumn fx:id="propsColumn" prefWidth="184.0" text="Property" />
          <TreeTableColumn fx:id="valuesColumn" prefWidth="232.0" text="Name" />
        </columns>
      </TreeTableView>
      <ButtonBar layoutX="14.0" layoutY="436.0" prefHeight="40.0" prefWidth="575.0">
        <buttons>
          <Button mnemonicParsing="false" onAction="#onCancel" text="Cancel" />
            <Button mnemonicParsing="false" onAction="#onGenerateCode" text="Generate code" />
        </buttons>
      </ButtonBar>
   </children>
</AnchorPane>
